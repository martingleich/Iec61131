				"buildOfflineCompiler",
				"buildDebugAdapter"
			]
		},
		{
			"type": "process",
			"label": "buildOfflineCompiler",
			"command": "dotnet",
			"args": [
				"build",
				"--output",
				"bin/OfflineCompiler/",
				"..//..//OfflineCompiler//OfflineCompiler.csproj"
			]
		},
		{
			"type": "process",
			"label": "buildDebugAdapter",
			"command": "dotnet",
			"args": [
				"build",
				"--output",
				"bin/DebugAdapter/",
				"..//..//DebugAdapter//DebugAdapter.csproj"
			]
		}
	]
}